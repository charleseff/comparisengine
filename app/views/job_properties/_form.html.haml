= form_for @job_property do |f|
  -if @job_property.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job_property.errors.count, "error")} prohibited this job_property from being saved:"
      %ul
        - @job_property.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :weight
    = f.number_field :weight
  .actions
    = f.submit 'Save'
