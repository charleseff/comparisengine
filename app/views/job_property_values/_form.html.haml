= form_for @job_property_value do |f|
  -if @job_property_value.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job_property_value.errors.count, "error")} prohibited this job_property_value from being saved:"
      %ul
        - @job_property_value.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :job_id
    = f.number_field :job_id
  .field
    = f.label :job_property_id
    = f.number_field :job_property_id
  .field
    = f.label :value
    = f.number_field :value
  .actions
    = f.submit 'Save'
